.top {
  width: 100%;
  height: 100rpx;
  background-color: #00aac1;
  position: fixed;
  z-index: 999;
}
.top .top-friend {
  float: left;
}
.top .top-friend image {
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx 20rpx;
}
.top .post {
  float: right;
}
.top .post image {
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx 20rpx;
}
.content .share {
  border-bottom: 8rpx solid #d3ddf2;
  width: 100%;
  background-color: #d3ddf2;
  padding-top: 100rpx;
}
.content .share .share-top {
  width: 100%;
  height: 80rpx;
  background-color: #f2e8d3;
}
.content .share .share-top .user-head {
  float: left;
  margin: 5rpx 10rpx;
}
.content .share .share-top .user-head image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}
.content .share .share-top .user-head .user-name {
  float: right;
  margin: 15rpx 10rpx;
  font-weight: 550;
}
.content .share .share-top .time {
  float: right;
  margin-top: 40rpx;
  margin-right: 20rpx;
  font-weight: 530;
}
.content .share .share-content {
  border-top: 5rpx solid #f2e8d3;
}
.content .share .share-content image {
  width: 100%;
  height: 500rpx;
}


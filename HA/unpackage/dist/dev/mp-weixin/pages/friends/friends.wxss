page {
  background-color: #f5f5f5;
}
.bar-class {
  width: 100%;
  height: 100rpx;
  background-color: #00aac1;
  position: fixed;
  z-index: 999;
}
.bar-class .back {
  width: 10%;
  height: 70%;
  margin-left: 2.5%;
  margin-top: 15rpx;
}
.bar-class .back image {
  width: 100%;
  height: 100%;
}
.main {
  padding-top: 100rpx;
}
.main .msg {
  width: 100%;
  height: 180rpx;
  background-color: #d6d6d6;
  float: left;
}
.main .msg:active {
  background-color: #e6e6e6;
}
.main .msg .userHead {
  width: 16%;
  height: 64%;
  margin: 4% 2.5%;
  float: left;
}
.main .msg .userHead image {
  width: 100%;
  height: 100%;
  border-radius: 10%;
}
.main .msg .userName {
  width: 20%;
  height: 30%;
  float: left;
  margin-top: 36rpx;
  color: black;
  font-size: 36rpx;
  font-weight: 500;
}
.main .msg .userMsg {
  height: 20%;
  width: 70%;
  float: left;
  padding-top: 12rpx;
  color: #8a8a8a;
}
.main .msg .time {
  width: 20%;
  height: 20%;
  float: right;
  margin-top: 30rpx;
  margin-right: 5%;
  text-align: center;
  color: #6c6c6c;
}


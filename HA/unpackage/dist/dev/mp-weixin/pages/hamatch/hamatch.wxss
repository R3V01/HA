page {
  height: 100%;
  background-color: #f6ae54;
}
.p {
  width: 100%;
  background-color: #f6ae54;
}
.p .bottle {
  width: 30%;
  height: 280rpx;
  margin: auto auto;
  background-color: #CC3333;
  text-align: center;
  line-height: 280rpx;
}
.p .bottle button {
  width: 30rpx;
  height: 30rpx;
  display: inline;
  margin: auto auto;
  border-radius: 50%;
  background-color: #FFFF33;
  font-weight: bold;
}
.p .main {
  width: 80%;
  height: 800rpx;
  margin: auto auto;
  padding-top: 80rpx;
  background-color: #CC3333;
  border-radius: 30% 30% 15% 15%;
}
.p .main .pos {
  width: 80%;
  height: 80rpx;
  background-color: orange;
  margin: 80rpx auto;
}
.p .main .pos image {
  width: 80rpx;
  height: 80rpx;
}
.p .main .game {
  width: 60%;
  height: 80rpx;
  margin: 20rpx auto;
  background-color: orange;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}
.p .main .num {
  width: 60%;
  height: 80rpx;
  margin: 20rpx auto;
  background-color: orange;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}
.p .main .message {
  width: 60%;
  height: 80rpx;
  margin: 20rpx auto;
  background-color: orange;
  font-size: 32rpx;
}
.p .main .message textarea {
  height: 100%;
  width: 100%;
  overflow: scroll;
}
.p .main .haren {
  width: 50%;
  height: 120rpx;
  margin: 120rpx auto;
}
.p .main .haren .btn {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #990066;
  color: #FFFF33;
  line-height: 120rpx;
  font-weight: bolder;
  font-size: 40rpx;
}


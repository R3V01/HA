page {
  background-color: #e6e6e6;
}
.user {
  width: 100%;
  height: 300rpx;
  background-color: #f5f5f5;
}
.user .u-head {
  float: left;
  width: 40%;
  height: 100%;
  background-color: #f5f5f5;
}
.user .u-head image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin-top: 30%;
  margin-left: 30%;
}
.user .u-name {
  float: left;
  width: 60%;
  height: 60%;
  background-color: #f5f5f5;
  color: black;
  font-size: 50rpx;
  font-weight: bold;
}
.user .u-name .name {
  margin: 20% 15%;
}
.user .u-sign {
  float: left;
  width: 60%;
  height: 40%;
  background-color: #f5f5f5;
  color: #525252;
}
.user .u-sign .sign {
  width: 80%;
  height: 30%;
  padding-left: 15%;
  margin-top: 10%;
  flex: auto;
}
.sth {
  width: 100%;
  height: 150rpx;
  background-color: #f5f5f5;
}
.user-share {
  padding-left: 0.5%;
  padding-right: 0.5%;
  display: flex;
  flex-wrap: wrap;
  background-color: #e6e6e6;
}
.user-share .u-share-list {
  width: 33%;
  height: 350rpx;
}
.user-share .u-share-list image {
  width: 100%;
  height: 100%;
}


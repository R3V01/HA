page {
  height: 100%;
}
.edge {
  width: 100%;
  height: 100vh;
  background-color: #00aac1;
}
.back {
  position: absolute;
  top: 2%;
  left: 6%;
  z-index: 1000;
}
.back image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.swiper {
  width: 94%;
  height: 100%;
  margin: auto;
}
.swiper .user-detail {
  width: 100%;
  height: 50%;
  background-color: #00aac1;
}
.swiper .user-detail .user-head {
  width: 100%;
  height: 50%;
  background-color: #00aac1;
}
.swiper .user-detail .user-head image {
  width: 250rpx;
  height: 250rpx;
  border-radius: 125rpx;
  margin-top: 20%;
  margin-left: 32.5%;
}
.swiper .user-detail .user-name {
  width: 100%;
  height: 20%;
  background-color: #00aac1;
  color: #FFFFFF;
  text-align: center;
  line-height: 120rpx;
  font-size: 60rpx;
  font-weight: bold;
}
.swiper .user-detail .user-sex {
  width: 50%;
  height: 15%;
  float: left;
  background-color: #00aac1;
  text-align: right;
}
.swiper .user-detail .user-sex image {
  width: 66rpx;
  height: 66rpx;
}
.swiper .user-detail .user-age {
  width: 50%;
  height: 15%;
  float: right;
  background-color: #00aac1;
}
.swiper .user-detail .user-age image {
  width: 66rpx;
  height: 66rpx;
}
.swiper .user-detail .user-msg {
  width: 100%;
  height: 15%;
  background-color: #00aac1;
  text-align: center;
  color: #FFFFFF;
  font-size: 36rpx;
}
.swiper .user-pic {
  width: 100%;
  height: 30%;
  display: flex;
  flex-wrap: wrap;
  background-color: #00aac1;
}
.swiper .user-pic .u-share-list {
  flex: 1;
  height: 350rpx;
}
.swiper .user-pic .u-share-list image {
  width: 100%;
  height: 100%;
}
.swiper .btn {
  width: 100%;
  height: 100rpx;
}
.swiper .btn .chat {
  background-color: #ea5514;
  width: 350rpx;
  height: 100rpx;
  font-size: 42rpx;
  line-height: 100rpx;
  color: #FFFFFF;
  display: block;
  margin: 100rpx auto;
}


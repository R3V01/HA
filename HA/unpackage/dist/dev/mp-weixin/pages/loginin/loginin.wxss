.content {
  padding-top: 32rpx;
}
.top {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding: 16rpx;
  background-color: #F8F8F8;
}
.top .top-right {
  float: right;
  padding-right: 32rpx;
}
.top .top-right .text {
  font-size: 32rpx;
  font-weight: 900;
  color: #333333;
  line-height: 88rpx;
}
.logo {
  text-align: center;
}
.logo image {
  padding-top: 256rpx;
  width: 194rpx;
  height: 92rpx;
  margin: 0 auto;
}
.main {
  padding: 54rpx 32rpx 120rpx;
}
.main .title {
  font-size: 56rpx;
  font-weight: 500;
  color: #333333;
  line-height: 80rpx;
}
.main .slogan {
  font-size: 48rpx;
  font-weight: 400;
  color: rgba(39, 40, 50, 0.5);
  line-height: 56rpx;
}
.main .inputs {
  padding-top: 8rpx;
}
.main .inputs input {
  padding-top: 40rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 88rpx;
  color: #555555;
  border-bottom: 1rpx solid #808080;
}
.main .tips {
  color: red;
  line-height: 56rpx;
  float: left;
}
.submit {
  margin: 0 auto;
  width: 520rpx;
  height: 96rpx;
  background-color: #007AFF;
  box-shadow: 0 50rpx 32rpx -36rpx rgba(255, 228, 49, 0.4);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 900;
  color: #272832;
  line-height: 96rpx;
  text-align: center;
}


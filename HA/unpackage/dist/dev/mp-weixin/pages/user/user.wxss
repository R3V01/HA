.user {
  width: 100%;
  height: 300rpx;
  background-color: #C0C0C0;
}
.user .u-head {
  width: 100%;
  height: 100%;
  background-color: white;
  padding: 0 auto;
}
.user .u-head image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 150rpx;
  display: block;
  margin: 10% auto;
}
.sth {
  width: 100%;
  height: 150rpx;
  background-color: yellow;
}
.sth .u-name {
  width: 100%;
  height: 60%;
  background-color: white;
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
}
.sth .u-sign {
  width: 100%;
  height: 40%;
  background-color: #999999;
  text-align: center;
}
.user-share {
  padding-left: 0.5%;
  padding-right: 0.5%;
  display: flex;
  flex-wrap: wrap;
}
.user-share .u-share-list {
  width: 33%;
  height: 350rpx;
}
.user-share .u-share-list image {
  width: 100%;
  height: 100%;
}
.btn {
  width: 100%;
  height: 100rpx;
  background-color: #007AFF;
}
.btn .chat {
  background-color: #F0AD4E;
  width: 350rpx;
  height: 100rpx;
  background-color: 30rpx;
  display: block;
  margin: 100rpx auto;
}

